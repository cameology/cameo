FROM docker.io/library/ubuntu:jammy
WORKDIR /gibbon

ENV TZ=Asia/Jakarta
ENV DEBIAN_FRONTEND=noninteractive

# Installing Builder Package
RUN apt update && \
    apt install -y build-essential pkg-config wget curl zip unzip tar cmake

# Cloning GTest
RUN git clone https://github.com/google/googletest.git kernels/libs/googletest
