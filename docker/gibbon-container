FROM docker.io/library/ubuntu:jammy
WORKDIR /gibbon

ENV TZ=Asia/Jakarta
ENV DEBIAN_FRONTEND=noninteractive

# Installing Builder Package
RUN apt update && \
    apt install -y curl zip unzip tar build-essential pkg-config wget

# Installing vcpkg
RUN wget -qO vcpkg.tar.gz https://github.com/microsoft/vcpkg/archive/master.tar.gz && \
    mkdir /opt/vcpkg && \
    tar xf vcpkg.tar.gz --strip-components=1 -C /opt/vcpkg && \
    /opt/vcpkg/bootstrap-vcpkg.sh && \
    ln -s /opt/vcpkg/vcpkg /usr/local/bin/vcpkg && \
    vcpkg version